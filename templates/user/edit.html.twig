{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
	<section>
		<a href="{{ path('app_user_index') }}" id="admin_menu_link">
			<i class="bi bi-caret-left-fill"></i>
			Retour aux utilisateurs</a>
		<h1>Modifier utilisateur</h1>

		{# {{ include('user/_form.html.twig') }} #}

		{{ form_start(form) }}
		{{ form_row(form.nickname, {
            'attr': {'class': 'form-control mt-2 mb-4'},
            label: 'Pseudo'
        }) }}
		{{ form_row(form.email, {
            'attr': {'class': 'form-control mt-2 mb-4'},
            label: 'Email'
        }) }}
		{{ form_row(form.password, {
            'attr': {'class': 'form-control mt-2 mb-4'},
            label: 'Mot de passe'
        }) }}
		{{ form_row(form.roles, {
            'attr': {'class': 'form-control mt-2 mb-4'},
            label: 'Roles'
        }) }}

	</section>
	<button class="btn new-data-btn mb-5">{{ button_label|default('Confirmer') }}</button>
	{{ form_end(form) }}
{% endblock %}
