<div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1000;">
	{% for label, messages in app.flashes %}
	{% for message in messages %}
	<!--begin::Toast-->
		<div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
			<div class="toast-header"><strong class="mr-auto">{{ label }}</strong></div>
			<div class="toast-body">{{ message }}</div>
		</div>
	<!--end::Toast-->
	{% endfor %}
	{% endfor %}
</div>
