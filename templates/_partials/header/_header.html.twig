<header>
	<nav class="navbar navbar-expand-lg" data-bs-theme="dark">
		<div class="container-fluid" style="max-width: 1200px;">
			<a id="devop" class="navbar-brand title" href="{{ path('app_blog') }}">Dev
				<span>|</span>
				OP</a>

			<ul id="header-menu" class="navbar-nav min1000">
				<li class="nav-item">
					<a class="nav-link {% if app.request.attributes.get('tri') == 'top-articles' %}current-page{% endif %}" href="{{ path('app_blog', {'tri': 'top-articles'}) }}">Top articles</a>
				</li>
				<li class="nav-item">
					<a class="nav-link {% if app.request.attributes.get('tri') == 'latest-articles' %}current-page{% endif %}" href="{{ path('app_blog', {'tri': 'latest-articles'}) }}">Latest articles</a>
				</li>
			</ul>

			<div class="dropdown ml-auto">
				<i class="bi bi-person-circle user-icon dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" {% if app.user %} style="color:var(--carrot-orange);" {% endif %}></i>
				<ul id="header-dd-menu" class="dropdown-menu dropdown-menu-end">
					{% if app.user %}
						<li>
							<a class="dropdown-item" href="{{ path('app_logout') }}">Log out</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('app_blog', {'tri': 'my-liked-articles'}) }}">My liked articles</a>
						</li>
					{% else %}
						<li>
							<a class="dropdown-item" href="{{ path('app_login') }}">Sign in</a>
						</li>
					{% endif %}
					<li class="max1000">
						<a class="dropdown-item" href="#">Top articles</a>
					</li>
					<li class="max1000">
						<a class="dropdown-item" href="#">Latest articles</a>
					</li>
					{% if is_granted('ROLE_ADMIN') %}
						<li>
							<a class="dropdown-item" href="{{ path('app_admin') }}">Admin</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</nav>

	<!-- Inclure les fichiers CSS et JS de Bootstrap -->


</header>
