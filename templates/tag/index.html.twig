{% extends 'base.html.twig' %}

{% block title %}Tags
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.css">
	<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}
{% block javascripts %}
	<script defer src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
	<script defer src="https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.js"></script>
{% endblock %}

{% block body %}
	<section>
    <a href="{{ path('app_admin') }}" id="admin_menu_link"><i class="bi bi-caret-left-fill"></i> Back to admin menu</a>
		<h1>Tags</h1>
		<a href="{{ path('app_tag_new') }}" class="new-data-btn mb-5">New tag</a>
		<table data-toggle="table" data-pagination="true" data-search="true">
			<thead>
				<tr>
					<th>Name</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for tag in tags %}
					<tr>
						<td>{{ tag.name }}</td>
						<td class="actions_data">
							<a href="{{ path('app_tag_show', {'id': tag.id}) }}"><i class="bi bi-eye-fill see-data-icon"></i></a>
							<a href="{{ path('app_tag_edit', {'id': tag.id}) }}"><i class="bi bi-pencil-fill edit-data-icon"></i></a>
							{{ include('tag/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</section>
{% endblock %}
