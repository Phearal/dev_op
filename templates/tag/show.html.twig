{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
<section>
		<a href="{{ path('app_tag_index') }}" id="admin_menu_link">
			<i class="bi bi-caret-left-fill"></i>
			Retour aux tags</a>
    <h1>Tag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn new-data-btn">Modifier</a>

    </section>
{% endblock %}
